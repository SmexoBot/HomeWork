<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFC4E4FF" RenderTransformOrigin="0.592,0.492" Margin="0,0,0,-225">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="butCulculate" Content="Обновить" Click="Button_Click" Margin="55,371,0,0" FontFamily="Verdana" FontWeight="Normal" BorderThickness="1,1,1,1" ClipToBounds="True" RenderTransformOrigin="0.548,-0.506" VerticalAlignment="Top" Height="43" HorizontalAlignment="Left" Width="128" Grid.Column="2"/>
        <TextBox x:Name="TxBEnd" HorizontalAlignment="Left" Margin="48,154,0,0" TextWrapping="Wrap" Width="142" FontFamily="Verdana" TextChanged="txbInput_TextChanged" Height="38" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox x:Name="TxBStep" HorizontalAlignment="Left" Height="37" Margin="48,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" FontFamily="Verdana" Grid.Column="2"/>
        <TextBox x:Name="TxBStart" HorizontalAlignment="Left" Height="38" Margin="48,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" FontFamily="Verdana" Grid.Column="2"/>
        <TextBox x:Name="TxBScale" HorizontalAlignment="Left" Height="38" Margin="48,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" FontFamily="Verdana" Grid.Column="2"/>
        <Label Content="Начало" HorizontalAlignment="Left" Height="34" Margin="61,17,0,0" VerticalAlignment="Top" Width="116" Grid.Column="2"/>
        <Label Content="Конец" HorizontalAlignment="Left" Height="41" Margin="61,108,0,0" VerticalAlignment="Top" Width="116" Grid.Column="2"/>
        <Label Content="Шаг" HorizontalAlignment="Left" Height="34" Margin="61,197,0,0" VerticalAlignment="Top" Width="116" Grid.Column="2"/>
        <Label Content="Масштаб" Height="34" Margin="61,277,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116" Grid.Column="2"/>
        <Image x:Name="ImGraph" HorizontalAlignment="Left" Margin="10,60,0,0" Width="588" OpacityMask="White" Height="588" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <TextBox x:Name="TxBInput" HorizontalAlignment="Left" Height="28" Margin="112,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="477" FontFamily="Verdana" Grid.ColumnSpan="2"/>
        <Label Content="Ведите выражение:" HorizontalAlignment="Left" Margin="123,0,0,617" Width="227" FontFamily="Verdana"/>

    </Grid>
</Window>
